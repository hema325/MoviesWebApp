@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <form asp-action="Login" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" class="col-4">
        <fieldset>
          <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div class="form-check mt-1">
             <input class="form-check-input" asp-for="IsPersistent">
             <label class="form-check-label" asp-for="IsPersistent">
               Remeber Me
             </label>
          </div>
    
          <button type="submit" class="btn btn-primary mt-2">Login</button>
        </fieldset>
    </form>
</div>

<ul class="list-unstyled mt-2">
   <li><a asp-action="ResetPassword" >Forgot Password?</a></li>
   <li><a asp-action="ExternalLogin" asp-route-provider="Facebook" >Sign In Using Facebook</a></li>
</ul>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}