@model AddMovieReviewerViewModel
@{
    ViewData["Title"] = "AddMovieReviewer";
}


<div class="page-header row justify-content-between">
              <h3 class="page-title"> Create A New Movie Reviewer </h3>
            </div>

<div class="card">
<div class="auth-form-light text-left p-5">
                <h4>Movie Reviewer</h4>
                <form asp-action="AddMovieReviewer" enctype="multipart/form-data" class="pt-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="MovieId" hidden />
                     <input asp-for="returnUrl" hidden />
                  <div class="form-group">
                      <label>Reviewer</label>
                    <select asp-for="ReviewerId" class="form-control form-control-lg" asp-items="@Model.ReviewersList">
                        <option selected disabled>Select Reviewer</option>
                    </select>
                  </div>
                  <div class="form-group">
                      <label asp-for="Stars"></label>
                      <input asp-for="Stars" class="form-control" />
                  </div>
                  <div class="mt-3">
                    <input type="submit" value="Add Movie Reviewer" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">
                    <a href="@Model.returnUrl" class="btn btn-block btn-gradient-secondary btn-lg font-weight-medium auth-form-btn">Back</a>
  
                </div>
                </form>
              </div>
              </div>






