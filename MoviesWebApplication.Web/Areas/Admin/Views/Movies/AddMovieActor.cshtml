@model AddMovieActorViewModel
@{
    ViewData["Title"] = "AddMovieActor";
}


<div class="page-header row justify-content-between">
              <h3 class="page-title"> Create A New Movie Actor </h3>
            </div>

<div class="card">
<div class="auth-form-light text-left p-5">
                <h4>Movie Actor</h4>
                <form asp-action="AddMovieActor" enctype="multipart/form-data" class="pt-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="MovieId" hidden />
                    <input asp-for="returnUrl" hidden />
                  <div class="form-group">
                      <label asp-for="ActorId"></label>
                    <select asp-for="ActorId" class="form-control form-control-lg" asp-items="@Model.ActorsList">
                        <option selected disabled>Select Actor</option>
                    </select>
                  </div>
                  <div class="form-group">
                      <label asp-for="Role"></label>
                      <input asp-for="Role" class="form-control" />
                  </div>
                  <div class="mt-3">
                    <input type="submit" value="Add Movie Actor" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">
                    <a href="@Model.returnUrl" class="btn btn-block btn-gradient-secondary btn-lg font-weight-medium auth-form-btn">Back</a>
  
                </div>
                </form>
              </div>
              </div>




