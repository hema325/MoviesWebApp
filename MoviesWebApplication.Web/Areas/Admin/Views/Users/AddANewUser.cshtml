@model AddANewUserViewModel
@{
    ViewData["Title"] = "AddANewUser";
}


<div class="page-header row justify-content-between">
              <h3 class="page-title"> Add A New Account </h3>
            </div>

<div class="card">
<div class="auth-form-light text-left p-5">
                <h4>Account</h4>
                <form asp-action="AddANewUser" enctype="multipart/form-data" class="pt-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="form-group">
                      <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control form-control-lg" placeholder="First name">
                  </div>
                  <div class="form-group">
                      <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control form-control-lg"  placeholder="Last Name">
                  </div>
                  <div class="form-group">
                      <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                  </div>
                  <div class="form-group">
                      <label>Choose Role</label>
                    <select asp-for="RoleId" class="form-control form-control-lg" asp-items="@Model.Roles">
                        <option selected disabled>Select Account Role</option>
                    </select>
                  </div>
                  <div class="form-group">
                      <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                  </div>
                  <div class="form-group">
                      <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Password">
                  </div>
                  <div class="form-group">
                      <label asp-for="Image"></label>
                      <input asp-for="Image" class="form-control" />
                  </div>
                  <div class="mt-3">
                    <input type="submit" value="Add Account" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">
                  </div>
                </form>
              </div>
              </div>



