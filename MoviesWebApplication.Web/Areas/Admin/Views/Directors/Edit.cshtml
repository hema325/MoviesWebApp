@model EditDirectorViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="page-header row justify-content-between">
              <h3 class="page-title"> Edit Director </h3>
            </div>

<div class="card">
<div class="auth-form-light text-left p-5">
                <h4>Director</h4>
                <form asp-action="Edit" enctype="multipart/form-data" class="pt-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" hidden />
                    <input asp-for="ReturnUrl" hidden />
                  <div class="form-group">
                      <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control form-control-lg" placeholder="First name">
                  </div>
                  <div class="form-group">
                      <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control form-control-lg"  placeholder="Last Name">
                  </div>
                  <div class="form-group">
                      <label asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-control form-control-lg" asp-items="@Model.Genders">
                        <option selected disabled>Select Actor Gender</option>
                    </select>
                  </div>
                  <div class="form-group">
                      <label asp-for="Image"></label>
                      <input asp-for="Image" class="form-control" />
                  </div>
                  <div class="form-group">
                        <label asp-for="Biography" for="exampleTextarea1"></label>
                        <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                      </div>
                  <div class="mt-3">
                    <input type="submit" value="Edit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">
                  </div>
                </form>
              </div>
              </div>




